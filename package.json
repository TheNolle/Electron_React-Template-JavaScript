{
  "name": "electron-x-react",
  "version": "0.0.1",
  "main": "electron-main.js",
  "scripts": {
    "start": "pnpm build && electron .",
    "dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail \"webpack serve --config webpack.config.js --mode development --no-cache --port 1245\" \"wait-on http://localhost:1245 && electron .\"",
    "build": "webpack --config webpack.config.js --mode production",
    "package": "pnpm build && electron-builder",
    "update": "pnpm install && pnpm update"
  },
  "build": {
    "appId": "com.thenolle.app.electron-x-react",
    "productName": "electron-x-react",
    "directories": {
      "buildResources": "dist"
    },
    "files": [
      "dist/",
      "electron-main.js"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/plugin-transform-react-jsx": "^7.22.3",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.3",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^24.4.1",
    "electron-builder": "^23.6.0",
    "html-webpack-plugin": "^5.5.1",
    "sass": "^1.62.1",
    "sass-loader": "^13.3.1",
    "style-loader": "^3.3.3",
    "wait-on": "^7.0.1",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2"
  }
}